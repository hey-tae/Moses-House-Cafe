<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="icon" href="/img/coffee.ico" type="image/x-icon" />
    <link rel="stylesheet" href="tailwind.css">
</head>
<body>
	<header>
		<nav class="flex justify-around py-4 bg-gray-50 shadow-sm">
			<div class="flex">
				<a href="/"><h1 class="font-semibold text-3xl text-yellow-900">Java House</h1></a>
			</div>
			<div class="mt-2 space-x-3">
				<span class="font-semibold">Barista Panel:</span>
				<a href="/login" class="text-gray-600 hover:text-gray-500 active:text-gray-700 font-semibold" ><span class="fa fa-user"></span> Login</a>
				<a href="/signup" class="text-gray-600 hover:text-gray-500 active:text-gray-600 font-semibold" ><span class="fa fa-user"></span> Signup</a>
			</div>
		</nav>
	</header>
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
			<div class="form-group">
				<label>Email</label>
				<input type="text" class="form-control" name="email">
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" class="form-control" name="password">
			</div>

			<button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</body>
</html>
