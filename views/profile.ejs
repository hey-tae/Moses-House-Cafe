<!doctype html>
<html>
<head>
    <title>JavaHouse</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" href="/img/coffee.ico" type="image/x-icon" />
    <link rel="stylesheet" href="tailwind.css">

</head>
<body>
  
  <!-- NAV BAR -->

  <header>
    <nav class="flex justify-around py-4 bg-gray-50 shadow-sm">
      <div class="flex">
        <a href="/"><h1 class="font-semibold text-3xl text-yellow-900">Java House</h1></a>
      </div>
      <div class="mt-2 space-x-3">
        <span class="font-semibold">Barista Panel:</span>
        <a href="/login" class="text-gray-600 hover:text-gray-500 active:text-gray-700 font-semibold" ><span class="fa fa-user"></span> Login</a>
        <a href="/signup" class="text-gray-600 hover:text-gray-500 active:text-gray-600 font-semibold" ><span class="fa fa-user"></span> Signup</a>
      </div>
    </nav>
  </header>

  <!-- Begin page content -->

  <div class="m-auto px-96 py-16 ">

      <!-- PENDING ORDERS -->

      <h2 class="text-4xl font-semibold mb-4">Pending Orders</h2>

      <div class="flex space-x-10">
      <% for(var i=0; i<messages.length; i++){ %>
        <% if(messages[i].completed === false){ %>
          <section class="bg-gray-100 w-56 h-80 py-6 px-8">
            <h4 class="text-2xl font-semibold my-2">Order #<%= i + 1 %></h4>

            <p class="text-xl name" data-name="<%= messages[i].orderForm[0] %>">
              <span class="font-semibold">
                Name: 
              </span>
              <%= messages[i].orderForm[0] %>
            </p>

            <p class="text-xl size" data-size="<%= messages[i].orderForm[1] %>"><span class="font-semibold">Size: </span><%= messages[i].orderForm[1] %></p>
            <p class="text-xl flavor" data-flavor="<%= messages[i].orderForm[2] %>"><span class="font-semibold">Flavor: </span><%= messages[i].orderForm[2] %></p>
            <p class="text-xl milk" data-milk="<%= messages[i].orderForm[3] %>"><span class="font-semibold">Has milk?: </span><%= messages[i].orderForm[3] %></p>
            <button class="complete text-xl text-green-600 hover:text-green-500 active:text-green-700 font-semibold my-2" data-value="<%= user.local.email %>" ><i class="fas fa-check-square"aria-hidden="true"></i> Complete</button>
          </section>

        <% } %>
      <% } %>
      </div>

      <hr class="my-8">

      <!-- COMPLETED ORDERS -->

      <h2 class="text-4xl font-semibold mb-4">Completed Orders</h2>
      
      <% for(var i=0; i<messages.length; i++) {%>

        <% if (messages[i].completed === true){ %>

          <section class="bg-gray-100 w-56 h-56 py-6 px-8">
            <p class="text-xl my-2"><span class="font-semibold">Size: </span><%= messages[i].orderForm[0] %></p>
            <p class="text-xl my-2"><span class="font-semibold">Flavor: </span><%= messages[i].orderForm[1] %></p>
            <p class="text-xl my-2"><span class="font-semibold">Has milk?: </span><%= messages[i].orderForm[2] %></p>
            <p class="text-xl my-2"><span class="font-semibold">Completed by: </span><%= messages[i].barista %></p>
          </section>

        <% } %>

      <% } %>
      
  

      <script src="profile.js"></script>
    </div>
  </body>
</html>
